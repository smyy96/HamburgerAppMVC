@page
@model RegisterModel

@{
    Layout = "_LoginLayout";

    ViewData["Title"] = "Register";
}

<div class="register-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a class="h1"><b>Üye</b>Ol</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Yeni üyelik kaydı.</p>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="input-group mb-3">
                    <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Adınız" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Input.Name" class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Surname" class="form-control" aria-required="true" placeholder="Soyadınız" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Input.Surname" class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Input.Email" class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Input.Password" class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Şifre Tekrarı" />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span asp-validation-for="Input.ConfirmPassword" class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-block">Kaydol</button> 
                    </div>
                </div>
            </form>


            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-center mt-1">Zaten üyeliğim var.</a>
        </div>
    </div>
</div>
