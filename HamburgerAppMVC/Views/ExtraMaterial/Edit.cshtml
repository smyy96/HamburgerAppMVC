@model ExtraMaterialViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Ekstra Lezzet Güncelle";
}

@if (ViewBag.Hata != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 text-left custom-alert" style="background-color:rgb(255, 130, 130);" role="alert">
        <strong>Hata!</strong> @ViewBag.Hata
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<section class="content ml-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary mt-5">
                    <div class="card-header">
                        <h3 class="card-title">Ekstra Lezzet Güncelle</h3>
                    </div>

                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="ExtraMaterialName">Menü Ad:</label>
                                <input asp-for="ExtraMaterialName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Fiyat:</label>
                                <input asp-for="Price" class="form-control" />
                            </div>
                            <input hidden asp-for="Image" />
                            <div class="form-group">
                                @{
                                    if (ViewBag.PictureName != null)
                                    {
                                        <label>Resim Adı: @ViewBag.PictureName</label>
                                    }
                                }
                                <br />
                                <label asp-for="Image"> Resim Seç:</label>
                                <input asp-for="Image" type="file" class="form-control" />
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-success">Güncelle</button>
                            </div>
                            </<div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
