<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>HES Hamburger</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/UserTema/assets/img/favicon.png" rel="icon">
    <link href="~/UserTema/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Amatic+SC:wght@400;700&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/UserTema/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/UserTema/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/UserTema/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/UserTema/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/UserTema/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/UserTema/assets/css/main.css" rel="stylesheet">

</head>

<body class="index-page">

    @await Html.PartialAsync("_UserHeader")

    <main class="main">

        @await Html.PartialAsync("_UserHero")

        @await Html.PartialAsync("_UserAbout")

        @await Html.PartialAsync("_UserWhyUs")

        <!-- Stats Section -->
        <section id="stats" class="stats section">

            <img src="~/Images/2.jpg" alt="" data-aos="fade-in">

            <div class="container position-relative" data-aos="fade-up" data-aos-delay="100">

                <div class="row gy-4">

                    <div class="col-lg-3 col-md-6">
                        <div class="stats-item text-center w-100 h-100">
                            <span data-purecounter-start="0" data-purecounter-end="15" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Hamburger Çeşidi</p>
                        </div>
                    </div><!-- End Stats Item -->

                    <div class="col-lg-3 col-md-6">
                        <div class="stats-item text-center w-100 h-100">
                            <span data-purecounter-start="0" data-purecounter-end="10" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Yan Ürün Çeşidi</p>
                        </div>
                    </div><!-- End Stats Item -->

                    <div class="col-lg-3 col-md-6">
                        <div class="stats-item text-center w-100 h-100">
                            <span data-purecounter-start="0" data-purecounter-end="10" data-purecounter-duration="1" class="purecounter"></span>
                            <p>İçecek Çeşidi</p>
                        </div>
                    </div><!-- End Stats Item -->

                    <div class="col-lg-3 col-md-6">
                        <div class="stats-item text-center w-100 h-100">
                            <span data-purecounter-start="0" data-purecounter-end="1576" data-purecounter-duration="1" class="purecounter"></span>
                            <p>Toplam Sipariş</p>
                        </div>
                    </div><!-- End Stats Item -->

                </div>

            </div>

        </section><!-- /Stats Section -->

        @RenderBody()

        @await Html.PartialAsync("_UserTestimonials")

        @await Html.PartialAsync("_UserChef")

        @* @await Html.PartialAsync("_UserBookTable") *@

        @await Html.PartialAsync("_UserContact")

    </main>

    @await Html.PartialAsync("_UserFooter")

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/UserTema/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/UserTema/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/UserTema/assets/vendor/aos/aos.js"></script>
    <script src="~/UserTema/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/UserTema/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/UserTema/assets/vendor/swiper/swiper-bundle.min.js"></script>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


    <!-- Main JS File -->
    <script src="~/UserTema/assets/js/main.js"></script>


    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>